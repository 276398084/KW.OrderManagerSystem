
@model IEnumerable<KeWeiOMS.Domain.EbayType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","Ebay")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100]
        });

    });

                alert(1);
     function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
      }

     function url(v, r, i) {
         return '<a href="' + r.ProductUrl + '"  target="_blank"  class="easyui-linkbutton" ><img src="' + v + '" height="128px" width="128px" /></a>'
     }
     function syn() {
         $.ajax({
             url: '@Url.Action("Syn", "Ebay")',
             success: function (result) {
                 if (result.IsSuccess) {
                     $.messager.show({
                         title: '提示',
                         msg: result.Msg,
                         timeout: 0,
                         showType: 'slide',
                     })
                 }
                 else {
                     $.messager.show({
                         title: '提示',
                         msg: result.Msg,
                         timeout: 0,
                         showType: 'slide'
                     })
                 }
                 $('#dg').datagrid('reload');
         }  
         })
     }
</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
            <th field="ItemId" width="100" sortable="true">
                编号
            </th>

            <th field="ItemTitle" width="100" sortable="true">
                标题
            </th>
            <th field="PicUrl" width="100" formatter="url" sortable="true">
                图片链接
            </th>
            <th field="Currency" width="30" sortable="true">
                货币
            </th>

            <th field="Price" width="30" sortable="true">
                价格
            </th>
             <th field="StartNum" width="30" sortable="true">
                初始数量
            </th>

            <th field="NowNum" width="30" sortable="true">
                现在数量
            </th>

            <th field="StartTime" width="100" formatter="getDate" sortable="true">
                开始时间
            </th>

            <th field="CreateOn" width="100" formatter="getDate" sortable="true">
                同步时间
            </th>

            <th field="Account" width="100" sortable="true">
                账号
            </th>
            <td ></td>

    	</tr>
		</thead>
		</table>
        <div id="toolbar">
       <a href="#" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="syn();">同步</a>  
@*        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a> *@
		  <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div> 
		<div id="mm" style="width: 120px">
            <div data-options="name:'ItemId'">编号</div>
            <div data-options="name:'ItemTitle'">标题</div>
            <div data-options="name:'Account'">账号</div>

        </div>
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>

</div>
</body>
