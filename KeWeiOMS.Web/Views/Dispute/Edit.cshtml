@model KeWeiOMS.Domain.DisputeType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        $('#e_Status').combobox({
            valueField: 'id',
            textField: 'text',
            panelHeight: 'auto',
            editable: false,
            data: [{ id: "解决中", text: "解决中" }, { id: "已解决", text: "已解决" }]
        });
        $('#e_DisputeCategory').combobox({
            url: '@Url.Action("GetDisputeClass","Dictionary")',
                    valueField: 'FullName',
                    textField: 'FullName',
                    panelHeight: 'auto',
                    disabled: true
                });
        $('#e_SolveBy').combobox({
            url: '@Url.Action("ListQ","User")',
                    panelHeight: 100,
                    mode: 'remote',
                    valueField: 'Realname',
                    textField: 'Realname',
                    editable: true,
                    disabled: true
                });
        $("#e_RefundAmount").attr({
        });
        $('#e_Solution').combobox({
            url: '@Url.Action("GetDisputeSolution","Dictionary")',
            valueField: 'FullName',
            textField: 'FullName',
            panelHeight: 'auto',
            editable: true,
        });
        $('#e_LogisticMessage').combobox({
            url: '@Url.Action("GetDataByCode", "Dictionary")/LogisticMessageType',
                    valueField: 'DicValue',
                    textField: 'FullName',
                    panelHeight: 'auto',
                    width: 150
                });
    });
</script>
