
@model IEnumerable<KeWeiOMS.Domain.PurchaseTroubleType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","PurchaseTrouble")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100]
        });

    });


	//新建
        function c_dlg() {
            var url_str = '@Url.Action("Create","PurchaseTrouble")';
            showdlg(url_str, 'c_dlg', ajaxAdd)
        }

        //编辑框
        function e_dlg() {
            var url = '@Url.Action("Edit","PurchaseTrouble")/' + id;
            if (id != undefined) {
                var url = '@Url.Action("Edit", "Module")/' + id;
                showdlg(url, 'e_dlg', ajaxEdit)
            }
        }

        //异步新建提交
        function ajaxAdd() {
            formPost('c_form', '@Url.Action("Create", "PurchaseTrouble")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "PurchaseTrouble")', 'e_dlg', 'dg');
        }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {

                var url = '@Url.Action("Delete", "PurchaseTrouble")/' + id;
                alert(1);
                delData(url, 'dg');

            }
        }

    //获取选中行
    function getselectedRow() {
        var row = $('#dg').datagrid('getSelected');
        if (row != undefined) {
            if (row.hasOwnProperty('Id')) {
                var id = row['Id'];
                return id;
            }
        }
        $.messager.show({
            title: '提示',
            msg: '请选择行',
            timeout: 3000,
            showType: 'slide'
        });
        return (undefined);
    }
     function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
      }

</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
            <th field="Id" width="100">
                主键
            </th>

            <th field="Status" width="100">
                问题状态
            </th>

            <th field="PurchaseId" width="100">
                采购计划Id
            </th>

            <th field="PurchaseCode" width="100">
                采购计划编号
            </th>

            <th field="SKU" width="100">
                SKU
            </th>

            <th field="Qty" width="100">
                数量
            </th>

            <th field="Price" width="100">
                单价
            </th>

            <th field="Freight" width="100">
                运费
            </th>

            <th field="Supplier" width="100">
                供应商
            </th>

            <th field="LogisticsMode" width="100">
                物流方式
            </th>

            <th field="LogisticsCode" width="100">
                快递单
            </th>

            <th field="BuyOn" width="100">
                购买时间
            </th>

            <th field="ReceiveOn" width="100">
                到货时间
            </th>

            <th field="TroubleType" width="100">
                问题类型
            </th>

            <th field="TroubleDetail" width="100">
                问题描述
            </th>

            <th field="CreateBy" width="100">
                创建人
            </th>

            <th field="CreateOn" width="100">
                创建时间
            </th>

            <th field="DealBy" width="100">
                处理人
            </th>

            <th field="DealOn" width="100">
                处理时间
            </th>

            <th field="SolutionType" width="100">
                解决方式
            </th>

            <th field="SolutionDetail" width="100">
                解决描述
            </th>


    	</tr>
		</thead>
		</table>
        <div id="toolbar">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="c_dlg();">新建</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a>  
		  <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div> 
		<div id="mm" style="width: 120px">
            <div data-options="name:'PurchaseCode'">采购计划编号</div>
            <div data-options="name:'SKU'">SKU</div>
            <div data-options="name:'LogisticsCode'">快递单</div>
            <div data-options="name:'TroubleDetail'">问题描述</div>
            <div data-options="name:'SolutionDetail'">解决描述</div>

        </div>
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>

</div>
</body>
