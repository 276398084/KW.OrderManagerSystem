<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/easyUI/jquery-1.8.0.min.js")"></script>
    @*<script src="@Url.Content("~/Scripts/easyUI/jquery.cookie.js")"></script>*@
    <link id="easyuiTheme" href="@Url.Content("~/Scripts/easyUI/themes/metro-blue/easyui.css")" rel="stylesheet" type="text/css"  />
    <link href="@Url.Content("~/Scripts/easyUI/themes/icon.css")" rel="stylesheet"  type="text/css"  />
    <script src="@Url.Content("~/Scripts/easyUI/jquery.easyui.min.js")"></script>
    <script src="@Url.Content("~/Scripts/easyUI/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Scripts/easyUI/EasyUIUtil.js")"></script>
    <script src="@Url.Content("~/Scripts/date.js")"></script>
    <script src="@Url.Content("~/Scripts/easyUI/locale/easyui-lang-zh_CN.js")"></script>   
    <script type="text/javascript">
        $(function () {
            if (getCookie("Theme")!= null) {
                changeTheme(getCookie("Theme"));
            }
        })
        function getCookie(name)//取cookies函数       
        {
            var arr = document.cookie.match(new RegExp("(^| )" + name + "=([^;]*)(;|$)"));

            if (arr != null) return unescape(arr[2]); return null;
        }
        </script>
</head>
<body>
    @RenderBody()
</body>
</html>