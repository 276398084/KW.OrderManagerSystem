@{
    string locale = KeWeiOMS.Web.Language.GetString("ShowLanguageLocale123");
    string language = "zh_cn";
    switch (locale)
    {
        case "zh-Hans":
            language = "zh_cn";
            break;
        case "en-US":
            language = "en";
            break;
        default:
            language = "zh_cn";
            break;
    }
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @*<script src="@Url.Content("~/Scripts/easyUI/jquery-1.8.0.min.js")"></script>*@
    <script src="@Url.Content("~/Scripts/easyUI/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/easyUI/jquery.cookie.js")"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link id="easyuiTheme" href="@Url.Content("~/Scripts/easyUI/themes/metro-blue/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/easyUI/themes/icon.css")" rel="stylesheet" type="text/css" />
    <script id="easyuijs" src="@Url.Content("~/Scripts/easyUI/jquery.easyui.min.js")"></script>
    <script id="easyuiLocale" src="@Url.Content("~/Scripts/easyUI/locale/easyui-lang-" + language + ".js")"></script>
    <script src="@Url.Content("~/Scripts/easyUI/EasyUIUtil.js")"></script>
    <script src="@Url.Content("~/Scripts/js/common.js?v="+DateTime.Now.Ticks)"></script>

    <script type="text/javascript">

        $(function () {
            setTheme();
            setLocale('@Html.Language("ShowLanguageLocale123")');
        });
    </script>
</head>
<body>
    @RenderBody()
</body>
</html>
