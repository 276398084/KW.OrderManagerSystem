@model KeWeiOMS.Domain.SupplierType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#dg_product').datagrid({
            url: '@Url.Action("GetProductE", "SupplierProduct")?id=@ViewData["SuppliewsId"]',
            width: 700,
            toolbar: [{
                id: 'btnadd',
                text: '添加',
                iconCls: 'icon-add',
                handler: function () {
                    $('#btnsave').linkbutton('enable');
                    addp();
                }
            },
            {
                id: 'btnsave',
                text: '保存',
                iconCls: 'icon-save',
                handler: function () {
                    btnsave();
                }
            }
            , {
                id: 'btndel',
                text: '删除',
                iconCls: 'icon-add',
                handler: function () {
                    s_del();
                }
            }],
            frozenColumns: [[
            { field: 'ck', checkbox: true }
            ]],
            onClickRow: onClickRow
        });
    });
</script>
