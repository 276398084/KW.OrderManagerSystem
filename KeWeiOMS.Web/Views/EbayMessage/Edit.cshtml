	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.ItemId,"商品编号:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.ItemId,new{@id="e_ItemId"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.CreationDate,"问题创建时间:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.CreationDate,new{@id="e_CreationDate"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.CreateOn,"同步时间:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.CreateOn,new{@id="e_CreateOn"})
		</td>
	</tr>


    
</table>
</fieldset>
}
