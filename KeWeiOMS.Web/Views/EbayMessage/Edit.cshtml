@model KeWeiOMS.Domain.EbayMessageType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
	
        $('#e_CreationDate').datebox();


        $('#e_CreateOn').datebox();


    });
</script>
@using (Html.BeginForm("Edit", "EbayMessage", FormMethod.Post, new { id = "e_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
		<td>
            @Html.LabelFor(model => model.Id,"主键:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Id,new{@id="e_Id"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.MessageId,"消息Id:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.MessageId,new{@id="e_MessageId"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.MessageType,"消息类型:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.MessageType,new{@id="e_MessageType"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.QuestionType,"问题类型:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.QuestionType,new{@id="e_QuestionType"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.SenderEmail,"买家邮箱:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.SenderEmail,new{@id="e_SenderEmail"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.SenderID,"买家Id:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.SenderID,new{@id="e_SenderID"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.Subject,"消息主题:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Subject,new{@id="e_Subject"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.Body,"消息内容:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.Body,new{@id="e_Body"})
		</td>
	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.MessageStatus,"消息状态:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.MessageStatus,new{@id="e_MessageStatus"})
