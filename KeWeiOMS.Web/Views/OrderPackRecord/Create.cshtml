@model KeWeiOMS.Domain.OrderPackRecordType

@{
    Layout = null;
}

<script type="text/javascript">

    $(function () {

		        $('#c_PackBy').combobox({
          url: 'User/UserSrc',
          editable: true
      });

        $('#c_ScanBy').combobox({
          url: 'User/UserSrc',
          editable: true
      });


        $('#c_PackOn').datebox();


    });
    
</script>

