                <tr>
                    <td>原因:</td>
                    <td>
                        <input type="text" id="ErrorType" /></td>
                </tr>
                <tr>
                    <td>描述</td>
                    <td>
                        <textarea id="ErrorDesc" style="width: 300px;"></textarea></td>
                </tr>
