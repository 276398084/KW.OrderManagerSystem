@model KeWeiOMS.Domain.ModuleType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值

        $('#e_ParentId').combobox({
            url: '/Module/ParentList',
            valueField: 'Id',
            textField: 'FullName'
        });
    });
</script>
@using (Html.BeginForm("Edit", "Module", FormMethod.Post, new { id = "e_form" }))
{
    <fieldset>

        <table class="editForm">
            <tr>




            <tr>
                <td>
                    @Html.LabelFor(model => model.ParentId, "父节点主键:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ParentId, new { @id = "e_ParentId" })
                    @Html.HiddenFor(model => model.Id, new { @id = "e_Id" })
                    @Html.HiddenFor(model => model.CreateOn, new { @id = "e_CreateOn" })
                    @Html.HiddenFor(model => model.DeletionStateCode, new { @id = "e_DeletionStateCode" })
                    @Html.HiddenFor(model => model.CreateBy, new { @id = "e_CreateBy" })
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.Code, "编号:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Code, new { @id = "e_Code" })
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.FullName, "名称:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.FullName, new { @id = "e_FullName" })
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.ImageIndex, "图标编号:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ImageIndex, new { @id = "e_ImageIndex" })
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.NavigateUrl, "导航地址:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.NavigateUrl, new { @id = "e_NavigateUrl" })
                </td>
            </tr>

            <tr>
                <td>
                    @Html.LabelFor(model => model.SortCode, "排序码:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.SortCode, new { @id = "e_SortCode" })
                </td>
            </tr>



            <tr>
                <td>
                    @Html.LabelFor(model => model.Description, "备注:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Description, new { @id = "e_Description" })
                </td>
            </tr>





        </table>
    </fieldset>
}
