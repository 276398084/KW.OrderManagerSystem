@model IEnumerable<KeWeiOMS.Domain.CurrencyType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '@Url.Action("List", "Currency")',
                pageNumber: 1,
                pageSize: 20,
                pageList: [20, 40, 60, 80, 100]
            });

        });

        function updateRate() {
            var url_str = '@Url.Action("UpdateRate", "Currency")';
            $('#dg').datagrid('loading');
            $.ajax({
                type: "POST",
                url: url_str,
                success: function (result) {
                    $('#dg').datagrid('loaded');

                    if (!result.IsSuccess) {
                        $.messager.show({
                            title: '提示',
                            msg: '保存失败:' + result.ErrorMsg,
                            timeout: 0,
                            showType: 'slide'
                        });
                    } else {
                        alert("2");
                        $('#dg').datagrid('reload');
                        $.messager.show({
                            title: '提示',
                            msg: '更新成功',
                            timeout: 2000,
                            showType: 'slide'
                        });
                    }
                }
            });

        }

        //新建
        function c_dlg() {
            var url_str = '@Url.Action("Create", "Currency")';
            showdlg(url_str, 'c_dlg', ajaxAdd)
        }

        //编辑框
        function e_dlg() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Edit", "Currency")/' + id;
                showdlg(url, 'e_dlg', ajaxEdit)
            }
        }

        //异步新建提交
        function ajaxAdd() {
            formPost('c_form', '@Url.Action("Create", "Currency")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "Currency")', 'e_dlg', 'dg');
        }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Delete", "Currency")/' + id;
                delData(url, 'dg');
            }
        }
            //获取选中行
            function getselectedRow() {
                var row = $('#dg').datagrid('getSelected');
                if (row != undefined) {
                    if (row.hasOwnProperty('Id')) {
                        var id = row['Id'];
                        return id;
                    }
                }
                $.messager.show({
                    title: '提示',
                    msg: '请选择行',
                    timeout: 3000,
                    showType: 'slide'
                });
                return (undefined);
            }
            function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search

                });
            }
    </script>
    <div region="center">
        <table id="dg" class="easyui-datagrid"
            toolbar="#toolbar"
            rownumbers="true" fitcolumns="true" singleselect="true" pagination="true" fit="true">
            <thead>
                <tr>

                    <th field="CurrencyName" width="100" sortable="true">货币
                    </th>

                    <th field="CurrencyCode" width="100" sortable="true">符号
                    </th>
                    
                    <th field="CurrencyValue" width="100" sortable="true">值
                    </th>

                    <th field="CreateOn" width="100" formatter="getDate" sortable="true">更新时间
                    </th>


                </tr>
            </thead>
        </table>
        <div id="toolbar">
            <a href="#" class="easyui-linkbutton" iconcls="icon-reload" plain="true" onclick="updateRate();">同步</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="c_dlg();">新建</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="del();">删除</a>
            <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div>
        <div id="mm" style="width: 120px">
            <div data-options="name:'CurrencyName'">货币</div>
            <div data-options="name:'CurrencyCode'">符号</div>
            <div data-options="name:'CurrencyValue'">值</div>
        </div>
        <div id="c_dlg"></div>
        <div id="e_dlg"></div>

    </div>
</body>
