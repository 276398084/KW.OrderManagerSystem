
@model KeWeiOMS.Domain.PlacardType
@{
    ViewBag.Title = "IndexShow";
}
<script language="javascript" type="text/javascript">
    $(function () {
      $('#dg1').datagrid({
          url: '@Url.Action("ListQ","Placard")',
          columns: [[
                  {
                      field: 'CardType', title: '类别', width: 60,align:"right",
                      formatter: function (v, r, i) {
                          var top = "";
                          if (r.IsTop == 1) {
                              top = "[顶]";
                              top += '<a href="#" target="_blank"  class="easyui-linkbutton" style="font-size:16px">' + v + '</a>' + ":";
                          }
                          else { top = '<a href="#" target="_blank"  class="easyui-linkbutton" >' + v + '</a>' + ":";}
                          return top;
                      }
                  },
                  {
                      field: 'Title', title: '标题', width: 400,
                      formatter: function (v, r, i) {
                          var c="";
                          if (r.IsTop == 1) {
                              c = '<a href="#" target="_blank"  class="easyui-linkbutton" style="font-size:16px">' + v + '</a>'
                          }
                          else {
                              c = '<a href="#" target="_blank"  class="easyui-linkbutton" >' + v + '</a>'
                          }
                          return c;
                      }
                  },
                  {
                            field: 'CreateOn', title: '时间', width:90,
                            formatter: function (v, r, i) {
                                return daate(v);
                             }
                  }

                ]]
        });

    });
    function daate(value) {
        var date = new Date(parseInt(value.replace("/Date(", "").replace(")/", ""), 10));
        return date.format("yyyy-MM-dd");
    }
</script>      
<div align="right" style="width:550px"><a href='@Url.Action("Index", "Placard")' target="_Blank">更多公告>></a></div> 
<table id="dg1" class="easyui-datagrid" singleSelect="true"  >  
        <thead>  
        <tr>
            <th field="CardType" width="20">
                类别
            </th>

            <th field="Title" width="100">
                标题
            </th>


    	</tr>
		</thead>
		</table>
