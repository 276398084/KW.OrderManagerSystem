@model IEnumerable<KeWeiOMS.Domain.OrderAmountType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '@Url.Action("List", "OrderAmount")',
                pageNumber: 1,
                pageSize: 20,
                pageList: [20, 40, 60, 80, 100]
            });
        });


        //新建
        function c_dlg(i, id) {
            //0订单 1产品 2运费
            var url_str = "";
            if (i == 0) {
                url_str = '@Url.Action("GetOrders", "OrderAmount")/' + id;
            } else if (i == 1) {
                url_str = '@Url.Action("GetProducts", "OrderAmount")/' + id;
            } else if (i == 2) {
                url_str = '@Url.Action("GetFreights", "OrderAmount")/' + id;
            }

    showdlg(url_str, 'c_dlg', function () {
        $('#c_dlg').dialog('close');
    });
}

//删除
function del() {
    var id = getselectedRow();
    if (id != undefined) {

        var url = '@Url.Action("Delete", "OrderAmount")/' + id;
                alert(1);
                delData(url, 'dg');

            }
        }

        //获取选中行
        function getselectedRow() {
            var row = $('#dg').datagrid('getSelected');
            if (row != undefined) {
                if (row.hasOwnProperty('Id')) {
                    var id = row['Id'];
                    return id;
                }
            }
            $.messager.show({
                title: '提示',
                msg: '请选择行',
                timeout: 3000,
                showType: 'slide'
            });
            return (undefined);
        }
        function doSearch() {
            search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
            $("#dg").datagrid("load", {
                search: search
            });
        }

        function getAmount(v, r, i) {
            return r.CurrencyCode + ":" + v;
        }

        function getFreights(v, r, i) {
            return '<a href="javascript:void(0)" onclick="c_dlg(2,' + r.OId + ')">' + v + '</a>';
        }

        function getOrders(v, r, i) {
            return '<a href="javascript:void(0)" onclick="c_dlg(0,' + r.OId + ')">' + v + '</a>';
        }

        function getProducts(v, r, i) {
            return '<a href="javascript:void(0)" onclick="c_dlg(1,' + r.OId + ')">' + v + '</a>';
        }
    </script>
    <div region="center">
        <table id="dg" class="easyui-datagrid"
            toolbar="#toolbar"
            rownumbers="true" singleselect="true" pagination="true">
            <thead>
                <tr>
                    <th field="OrderNo" width="100">编号
                    </th>
                    <th field="OrderExNo" width="100">订单号
                    </th>
                    <th field="AgainCount" width="30" formatter="getOrders">重
                    </th>
                    <th field="SplitCount" width="30" formatter="getOrders">拆
                    </th>
                    <th field="OrderAmount" width="100" formatter="getAmount">金额
                    </th>
                    <th field="ExchangeRate" width="100">汇率
                    </th>
                    <th field="RMB" width="100">RMB
                    </th>
                    <th field="TotalFreight" width="100" formatter="getFreights">运费
                    </th>
                    <th field="TotalCosts" width="100" formatter="getProducts">成本
                    </th>
                    <th field="Fee" width="100">手续费
                    </th>
                    <th field="TransactionFees" width="100">交易费
                    </th>
                    <th field="OtherFees" width="100">OtherFee
                    </th>
                    <th field="Status" width="100">状态
                    </th>
                    <th field="Profit" width="100">利润
                    </th>
                </tr>
            </thead>
        </table>
        <div id="toolbar">

            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="del();">删除</a>
            <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
            <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="ShowAdvanced();">Advanced</a>
        </div>
        <div id="mm" style="width: 120px">
            <div data-options="name:'OrderNo'">订单编号</div>
            <div data-options="name:'OrderExNo'">订单号</div>
            <div data-options="name:'CurrencyCode'">货币</div>
            <div data-options="name:'ExchangeRate'">汇率</div>
        </div>
        <div id="c_dlg"></div>


    </div>
</body>
