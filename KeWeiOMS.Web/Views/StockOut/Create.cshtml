@model KeWeiOMS.Domain.StockOutType

@{
    Layout = null;
}

<script type="text/javascript">

    $(function () {
        $('#c_OrderNo').validatebox({required:true});
        $('#c_WId').combogrid({
            required: true,
            panelWidth: 410,
            mode: 'remote',
            idField: 'Id',
            textField: 'WName',
            required: true,
            url: '/Warehouse/QList',
            fit: true,
            columns: [[
                { field: 'Id', title: 'Id', width: 100 },
                { field: 'WCode', title: '仓库代码', width: 100 },
                { field: 'WName', title: '仓库名称', width: 100 },
                { field: 'Address', title: '仓位地址', width: 100 }

            ]]

        })
        $('#c_WId').combogrid("setValue", 1);
        $('#c_OutType').combobox({
            url: '@Url.Action("GetOutType","Dictionary")',
                    valueField: 'FullName',
                    textField: 'FullName',
                    panelHeight: 'auto',
                    editable: true,
                    required: true
                });
        $('#c_OutType').combobox("setValue", "扫描出库");

        $('#c_SKU').combogrid({
            required: true,
            panelWidth: 410,
            mode: 'remote',
            idField: 'SKU',
            textField: 'SKU',
            required: true,
            url: '/Product/ListQ',
            fit: true,
            columns: [[
                { field: 'SKU', title: 'SKU', width: 100 },
                { field: 'ProductName', title: 'Title', width: 200 },
                { field: 'Standard', title: '规格', width: 100 }

            ]]

        })
        $('#c_Qty').numberbox({
            required: true,
            onChange: function (){
                Qtynozero();
            }
        });
    });
    
    function Qtynozero() {
        var num = $('#c_Qty').attr("value");
        if (num != "" & num <= 0) {
            alert("数量输入有误");
            $('#c_Qty').numberbox("setValue", "");
        }
    }
</script>

