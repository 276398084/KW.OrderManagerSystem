@model IEnumerable<KeWeiOMS.Domain.StockOutType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '@Url.Action("List", "StockOut")',
                pageNumber: 1,
                pageSize: 20,
                pageList: [20, 40, 60, 80, 100]
            });
            $('#StartDate').datebox();
            $('#EndDate').datebox();
            $('#StartDate').datebox("setValue", getStartDate(30));
            $('#EndDate').datebox("setValue", getStartDate(-1));
        });

        //新建
        function c_dlg() {
            var url_str = '@Url.Action("Create", "StockOut")';

            $('#c_dlg').load(url_str, function () {
                $(this).dialog({
                    title: '新建',
                    modal: true,
                    loadingMessage: '正在加载...',
                    buttons: [{
                        text: '提交',
                        iconCls: 'icon-ok',
                        handler: function () {
                            ajaxAdd();
                        }
                    }, {
                        text: '取消',
                        handler: function () {
                            $('#c_dlg').dialog('close');
                        }
                    }]
                });
            }).dialog('open');;
        }

        //编辑框
        function e_dlg() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Edit", "StockOut")/' + id;
                $('#e_dlg').load(url, function () {
                    $(this).dialog({
                        title: '编辑',
                        modal: true,
                        loadingMessage: '正在加载...',
                        buttons: [{
                            text: '提交',
                            iconCls: 'icon-ok',
                            handler: function () {
                                ajaxEdit();
                            }
                        }, {
                            text: '取消',
                            handler: function () {
                                $('#e_dlg').dialog('close');
                            }
                        }]
                    });
                }).dialog('open');
            }
        }

        //异步新建提交
        function ajaxAdd() {
            $('#c_WName').attr("value", $('#c_WId').combogrid("getText"));
            $('#c_form').form('submit', {
                url: '@Url.Action("Create", "StockOut")',
                onSubmit: function () {
                    return $(this).form('validate');
                },
                success: function (result) {
                    var result = eval('(' + result + ')');
                    if (result.errorMsg) {
                        $.messager.show({
                            title: '提示',
                            msg: '保存失败:' + result.errorMsg,
                            timeout: 0,
                            showType: 'slide'
                        });
                    } else {
                        $('#c_dlg').dialog('close');
                        $('#dg').datagrid('reload');
                        $.messager.show({
                            title: '提示',
                            msg: '保存成功',
                            timeout: 2000,
                            showType: 'slide'
                        });
                    }
                }
            });
            }
            //异步修改提交
            function ajaxEdit() {
                $('#e_WName').attr("value", $('#e_WId').combogrid("getText"));
                $('#e_form').form('submit', {
                    url: '@Url.Action("Edit", "StockOut")',
                    onSubmit: function () {
                        return $(this).form('validate');
                    },
                    success: function (result) {
                        var result = eval('(' + result + ')');
                        if (result.errorMsg) {
                            $.messager.show({
                                title: '提示',
                                msg: '保存失败:' + result.errorMsg,
                                timeout: 0,
                                showType: 'slide'
                            });
                        } else {
                            $('#e_dlg').dialog('close');
                            $('#dg').datagrid('reload');
                            $.messager.show({
                                title: '提示',
                                msg: '保存成功',
                                timeout: 2000,
                                showType: 'slide'
                            });
                        }
                    }
                });
            }


            //删除
            function del() {
                var id = getselectedRow();
                if (id != undefined) {
                    $.messager.confirm('确认', '确定删除?', function (r) {
                        if (r) {
                            var url = '@Url.Action("Delete", "StockOut")/' + id;
                            $.post(url, function () {
                            }).success(function (data) {
                                var msgstr = "删除成功";
                                $.messager.show({
                                    title: '提示',
                                    msg: msgstr,
                                    timeout: 3000,
                                    showType: 'slide'
                                });
                                $('#dg').datagrid('reload');
                            }).error(function () {
                                $.messager.alert('错误', '删除发生错误');
                            });
                        }
                    });
                }
            }

            //获取选中行
            function getselectedRow() {
                var row = $('#dg').datagrid('getSelected');
                if (row != undefined) {
                    if (row.hasOwnProperty('Id')) {
                        var id = row['Id'];
                        return id;
                    }
                }
                $.messager.show({
                    title: '提示',
                    msg: '请选择行',
                    timeout: 3000,
                    showType: 'slide'
                });
                return (undefined);
            }
            function doSearch() {
                search = $('#StartDate').datebox("getValue") + "&" + $('#EndDate').datebox("getValue") + "$" + $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
            }
    </script>
    <div region="center">
        <table id="dg" class="easyui-datagrid"
            toolbar="#toolbar"
            rownumbers="true" fitcolumns="true" singleselect="true" pagination="true" fit="true">
            <thead>
                <tr>
                    @*            <th field="Id" width="100">
                主键
            </th>*@

                    <th field="OrderNo" width="100" sortable="true">订单编号
                    </th>
                    <th field="WName" width="100" sortable="true">仓库
                    </th>
                    <th field="OutType" width="100" sortable="true">出库类型
                    </th>
                    <th field="SKU" width="100" sortable="true">SKU
                    </th>
                    <th field="Qty" width="100" sortable="true">数量
                    </th>
                    <th field="SourceQty" width="100" sortable="true">原有库存
                    </th>
                    <th field="CreateBy" width="100" sortable="true">出库人
                    </th>
                    <th field="CreateOn" width="100" formatter="getDate" sortable="true">出库时间
                    </th>
                    <th field="Memo" width="100" sortable="true">备忘
                    </th>

                </tr>
            </thead>
        </table>
        <div id="toolbar">
            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="del();">删除</a>
            开始时间:<input id="StartDate" />
            结束时间:<input id="EndDate" />&nbsp&nbsp
        <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div>
        <div id="mm" style="width: 120px">
            <div data-options="name:'OrderNo'">订单编号</div>
            <div data-options="name:'SKU'">SKU</div>
            <div data-options="name:'CreateBy'">出库人</div>
        </div>
    </div>
</body>
