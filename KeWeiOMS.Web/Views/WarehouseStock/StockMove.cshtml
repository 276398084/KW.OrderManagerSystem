<fieldset>
    <legend>
        <label>
            库存转移扫描
        </label>
    </legend>
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td colspan="4" align="left" valign="top" style="padding-top: 10px;">
                <table cellspacing="0" cellpadding="1" bordercolor="#eeeeee" border="1" width="100%">
                    <tbody>

                        <tr>
                            <td height="26" align="right"></td>
                            <td>
                                原仓库:
                                <input id="cc" type="text" />
                                &nbsp;&nbsp;&nbsp;转移到&nbsp;&nbsp;&nbsp; 目标仓库:
                                <input id="ee" type="text" />
                            </td>
                        </tr>

                        <tr>
                            <td height="25" width="22%">
                                <h2>
                                    <b>扫描扫描</b>
                                </h2>
                            </td>
                            <td width="">
                                <input id="txt" onkeydown="return txt_keydown(event);" style="font-size: 50px; background-image: none; width: 511px" />
                            </td>
                        </tr>
                        <tr>
                            <td width="" colspan="2">
                                <font style="color: Red; font-size: 30px"><span id="spanStatus">等待扫描 SKUCode</span></font>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <span id="spanInfo"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</fieldset>
<script>
    var txt = document.getElementById("txt");
    var spanStatus = document.getElementById("spanStatus");
    var spanInfo = document.getElementById("spanInfo");
    var progress = 0;
    var oldstr = "";
    function txt_keydown(e) {
        var keynum;
        if (window.event) //IE
        {
            keynum = e.keyCode;
        }
        else if (e.which) //Netscape/Firefox/Opera
        {
            keynum = e.which;
        }
        if (keynum == 13) {

            if (txt.value == "") {
                Reset();
                return true;
            }
            if (progress == 0) {
                GetData(txt.value);
            }
            else if (progress == 1) {
                OutStock(txt.value);
            }

            txt.value = "";
            return false;
        }
        return true;
    }

    function GetData(str) {
        var p2 = $("#ee").combobox("getValue");
        var wname2 = $("#ee").combobox("getText");
        var p1 = $("#cc").combobox("getValue");
        var wname1 = $("#cc").combobox("getText");

        jQuery.ajax({
            url: "/WarehouseStock/GetSKU/",
            type: "post",
            data: "o=" + str,
            success: function (msg) {
                if (msg.IsSuccess) {
                    if (msg.WId == p1) {
                        oldstr = str;
                        ShowMessage("商品：" + msg.SKU + "  Code:" + str + " 从原仓库 " + wname1 + " 转移到 " + wname2, "请在一次扫描SKU确认", true);
                        progress = 1;
                    } else {
                        ShowMessage("商品：" + msg.SKU + "  Code:" + str + "  所属仓库是：" + msg.WName + "， 请选择正确的原仓库。", "SKU归属错误", true);
                        progress = 0;
                    }

                } else {
                    progress = 0;
                    oldstr = "";
                    ShowMessage(msg.Result, "等待扫描", true);
                }
            }
        });
    }

    function OutStock(str) {
        var p2 = $("#ee").combobox("getValue");
        var wname2 = $("#ee").combobox("getText");
        var p1 = $("#cc").combobox("getValue");
        var wname1 = $("#cc").combobox("getText");
        if (oldstr == str) {
            jQuery.ajax({
                url: "/WarehouseStock/StockMove/",
                type: "post",
                data: "o=" + str + "&w=" + p2,
                success: function (msg) {
                    if (msg.IsSuccess) {
                        progress = 0;
                        oldstr = "";
                        ShowMessage(msg.Result, "等待扫描", true);
                        Player2.controls.play();
                    } else {
                        progress = 0;
                        oldstr = "";
                        Player1.controls.play();
                        ShowMessage(msg.Result, "等待扫描", false);
                    }
                    progress = 0;
                }
            });
        } else {
            ShowMessage(null, "确认的的代码和上次不不一样!", false);
        }
    }

    //重置
    function Reset() {
        skuCode = [];
        progress = 0;
        txt.value = "";
        ShowMessage("", "等待扫描", false);
    }

    function ShowMessage(msgInfo, msgStatus, isOk) {
        if (msgInfo != null) {
            spanInfo.innerHTML = msgInfo;
        }
        if (msgStatus != null) {
            spanStatus.innerHTML = msgStatus;
        }
        if (isOk) {
            spanInfo.style.color = "Blue";
        }
        else {
            spanInfo.style.color = "Red";
        }
    }

</script>
