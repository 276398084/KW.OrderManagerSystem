@model KeWeiOMS.Domain.ProductType
@{
    Layout = null;
}
<link href="@Url.Content("~/Scripts/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/uploadify/jquery.uploadify-3.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kindeditor/kindeditor-min.js")"></script>
<script type="text/javascript">

    $(function () {
        $('#e_IsInfraction').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#e_IsElectronic').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });

        $('#e_HasBattery').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#e_Purchaser').combobox({
            url: '/User/QList/' + Purchaser,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto',
        });
        $('#e_Examiner').combobox({
            url: '/User/QList/' + Examiner,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto',
        });
        $('#e_Packer').combobox({
            url: '/User/QList/' + Packer,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto',
        });
        $('#e_Status').combobox({
            url: '/Home/ProductStatus/',
            valueField: 'id',
            textField: 'text',
            required: true,
            width: 200,
            panelHeight: 'auto',
        });
        $('#e_Category').combotree({
            url: '/ProductCategory/PList',

            required: true,
            width: 200
        });
        $('#e_Location').combogrid({
            panelWidth: 360,
            idField: 'PositionsName',
            textField: 'PositionsName',
            url: '/WarehouseLocation/QList',
            fit: true,
            mode: 'remote',
            columns: [[
               { field: 'PositionsName', title: '库位', width: 150 },
               { field: 'Warehouse', title: '仓库', width: 200 }
            ]]
        });

        $('#up_file').uploadify({
            'auto': false,
            'buttonText': '请选择图片',
            'swf': '@Url.Content("~/Scripts/uploadify/uploadify.swf")',
            'uploader': '/Home/SaveFile/',
            'multi': false,
            'onUploadSuccess': function (file, data, response) {
                eval("data=" + data);
                $('#e_PicUrl').val(data.SaveName);
                formPost('e_form', '@Url.Action("Create", "Product")', 'e_dlg', 'dg');
                $('e_form').clear();
            }
        });
    });



    function addProduct() {
        $.ajax({
            type: "POST",
            url: "/Product/HasExist/",
            data: "sku=" + $('#e_SKU').val(),
            success: function (msg) {
                if (msg.IsSuccess == "true") {
                    $('#up_file').uploadify('upload')

                }
                else {
                    $.messager.show({
                        title: '提示',
                        msg: '改编号已经存在',
                        timeout: 0,
                        showType: 'slide'
                    })
                }
            }
        });

    }

</script>

