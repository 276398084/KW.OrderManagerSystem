@model KeWeiOMS.Domain.ProductType
<link href="@Url.Content("~/Scripts/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/uploadify/jquery.uploadify-3.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kindeditor/kindeditor-min.js")"></script>

<script type="text/javascript">
    $(function () {
        $('#dg_zu').datagrid({
            url: '@Url.Action("ZuList", "Product")/@Model.SKU',
            width: 300,
            toolbar: [{
                id: 'btnadd',
                text: '添加',
                iconCls: 'icon-add',
                handler: function () {
                    addp();
                }
            }, {
                id: 'btndel',
                text: '删除',
                iconCls: 'icon-add',
                handler: function () {
                    if (editIndex == undefined) {
                        return;
                    }
                    $('#dg_zu').datagrid('cancelEdit', editIndex)
                            .datagrid('deleteRow', editIndex);
                    editIndex = undefined;
                }
            }, {
                id: 'btnsave',
                text: '保存',
                iconCls: 'icon-save',
                handler: function () {
                    accept();
                }
            }],
            onClickRow: onClickRow
        });

        $('#e_IsInfraction').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#e_IsElectronic').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });

        $('#e_HasBattery').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#e_IsZu').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#e_Purchaser').combobox({
            url: '/User/QList/' + Purchaser,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#e_Examiner').combobox({
            url: '/User/QList/' + Examiner,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#e_Packer').combobox({
            url: '/User/QList/' + Packer,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#e_Status').combobox({
            url: '/Home/ProductStatus/',
            valueField: 'id',
            textField: 'text',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#e_Category').combotree({
            url: '/ProductCategory/PList',
            required: true,
            width: 200
        });
        $('#e_Location').combogrid({
            panelWidth: 360,
            idField: 'PositionsName',
            textField: 'PositionsName',
            url: '/WarehouseLocation/QList',
            fit: true,
            mode: 'remote',
            columns: [[
               { field: 'PositionsName', title: '库位', width: 150 },
               { field: 'Warehouse', title: '仓库', width: 200 }
            ]]
        });


    });

    var editIndex = undefined;
    function endEditing() {
        if (editIndex == undefined) {
            return true;
        }
        if ($('#dg_zu').datagrid('validateRow', editIndex)) {
            $('#dg_zu').datagrid('endEdit', editIndex);

            editIndex = undefined;

            return true;

        } else {
            return false;
        }
    }
    function onClickRow(index) {
        if (editIndex != index) {
            if (endEditing()) {
                $('#dg_zu').datagrid('selectRow', index)
                        .datagrid('beginEdit', index);
                editIndex = index;
            } else {
                $('#dg_zu').datagrid('selectRow', editIndex);
            }
        }
    }
    function addp() {
        if (endEditing()) {
            $('#dg_zu').datagrid('appendRow', { Qty: 1, Price: 0 });
            editIndex = $('#dg_zu').datagrid('getRows').length - 1;
            $('#dg_zu').datagrid('selectRow', editIndex)
                    .datagrid('beginEdit', editIndex);
        }
    }
    function accept() {
        if (endEditing()) {
            $('#dg_zu').datagrid('acceptChanges');
        }
    }


    function addProduct() {

        if (endEditing()) {
            $('#dg_zu').datagrid('acceptChanges');
        }
        $("#rows").val(JSON.stringify($('#dg_zu').datagrid("getRows")));
        formPost('e_form', '@Url.Action("Edit", "Product")', 'e_dlg', 'dg', 'a');




    }

</script>

