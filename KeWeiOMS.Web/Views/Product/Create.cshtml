                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Weight, "重量:")
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Weight, new { @id = "c_Weight", @class = "easyui-validatebox", @required = "true" })
                </td>
                <td>
                    @Html.LabelFor(model => model.Long, "长×宽×高:")
