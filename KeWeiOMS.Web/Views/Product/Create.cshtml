<script src="@Url.Content("~/Scripts/kindeditor/kindeditor-min.js")"></script>
<script type="text/javascript">

    $(function () {
        $('#c_IsInfraction').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#c_IsElectronic').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });

        $('#c_HasBattery').combobox({
            valueField: 0,
            textField: 1,
            panelHeight: 50,
            data: checks
        });
        $('#c_Purchaser').combobox({
            url: '/User/QList/' + Purchaser,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#c_Examiner').combobox({
            url: '/User/QList/' + Examiner,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#c_Packer').combobox({
            url: '/User/QList/' + Packer,
            valueField: 'Id',
            textField: 'Realname',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#c_Status').combobox({
            url: '/Home/ProductStatus/',
            valueField: 'id',
            textField: 'text',
            required: true,
            width: 200,
            panelHeight: 'auto'
        });
        $('#c_Category').combotree({
            url: '/ProductCategory/PList',

            required: true,
            width: 200
        });
        $('#c_Location').combogrid({
            panelWidth: 360,
            idField: 'PositionsName',
            textField: 'PositionsName',
            url: '/WarehouseLocation/QList',
            fit: true,
            mode: 'remote',
            columns: [[
               { field: 'PositionsName', title: '库位', width: 150 },
               { field: 'Warehouse', title: '仓库', width: 200 }
            ]]
        });

        $('#up_file').uploadify({
            'auto': false,
            'buttonText': '请选择图片',
            'swf': '@Url.Content("~/Scripts/uploadify/uploadify.swf")',
            'uploader': '/Home/SaveFile/',
            'multi': false,
            'onUploadSuccess': function (file, data, response) {
                eval("data=" + data);
                $('#c_PicUrl').val(data.SaveName);
                formPost('c_form', '@Url.Action("Create", "Product")', 'c_dlg', 'dg');
                $('c_form').clear();
            }
        });
    });

