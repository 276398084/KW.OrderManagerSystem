@model IEnumerable<KeWeiOMS.Domain.ProductType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '@Url.Action("List", "Product")',
                pageNumber: 1,
                pageSize: 20,
                pageList: [20, 40, 60, 80, 100]
            });

        });

        //新建
        function c_dlg() {
            var url_str = '@Url.Action("Create", "Product")';

            $('#c_dlg').load(url_str, function () {
                $(this).dialog({
                    title: '新建',
                    modal: true,
                    loadingMessage: '正在加载...',
                    buttons: [{
                        text: '提交',
                        iconCls: 'icon-ok',
                        handler: function () {
                            ajaxAdd();
                        }
                    }, {
                        text: '取消',
                        handler: function () {
                            $('#c_dlg').dialog('close');
                        }
                    }]
                });
            }).dialog('open');;
        }

        //编辑框
        function e_dlg() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Edit", "Product")/' + id;
                $('#e_dlg').load(url, function () {
                    $(this).dialog({
                        title: '编辑',
                        modal: true,
                        loadingMessage: '正在加载...',
                        buttons: [{
                            text: '提交',
                            iconCls: 'icon-ok',
                            handler: function () {
                                ajaxEdit();
                            }
                        }, {
                            text: '取消',
                            handler: function () {
                                $('#e_dlg').dialog('close');
                            }
                        }]
                    });
                }).dialog('open');
            }
        }

        //异步新建提交
        function ajaxAdd() {
            formPost('c_form', '@Url.Action("Create", "Product")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "Product")', 'e_dlg', 'dg');
        }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {

                var url = '@Url.Action("Delete", "Product")/' + id;
                alert(1);
                delData(url, 'dg', 't');
            }
        }

        //获取选中行
        function getselectedRow() {
            var row = $('#dg').datagrid('getSelected');
            if (row != undefined) {
                if (row.hasOwnProperty('Id')) {
                    var id = row['Id'];
                    return id;
                }
            }
            $.messager.show({
                title: '提示',
                msg: '请选择行',
                timeout: 3000,
                showType: 'slide'
            });
            return (undefined);
        }
        function GetImg(v, r, i) {
            return '<img  src=' + v + '  height="64px" width="64px" />';
        }
        function ShowAdvanced() {
            showSrarch('@Url.Action("Search", "Product")', 's_dlg', 'dg')
        }
        function doSearch() {
            search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
            $("#dg").datagrid("load", {
                search: search
            });
        }
    </script>
    <div region="center">
        <table id="dg" class="easyui-datagrid"
            toolbar="#toolbar"
            rownumbers="true" fitcolumns="true" singleselect="true" pagination="true" fit="true">
            <thead>
                <tr>
                    <th field="SKU" width="100">SKU
                    </th>
                    <th field="OldSKU" width="100">旧
                    </th>

                    <th field="Category" width="100">类别
                    </th>
                    <th field="SPicUrl" width="100" formatter='GetImg'>图片
                    </th>
                    <th field="ProductName" width="100">商品名称
                    </th>

                    <th field="Standard" width="100">规格
                    </th>
                    <th field="Price" width="60">Price
                    </th>
                    <th field="Weight" width="60">重量
                    </th>
                    <th field="Long" width="100">长宽高
                    </th>
                    <th field="IsInfraction" width="100" formatter="getTrue">侵权
                    </th>
                    <th field="PackCoefficient" width="100">包装系数
                    </th>

                    <th field="IsElectronic" width="100" formatter="getTrue">电子
                    </th>
                    <th field="HasBattery" width="100" formatter="getTrue">电池
                    </th>
                    <th field="Location" width="100">库位
                    </th>
                </tr>
            </thead>
        </table>
        <div id="toolbar">

            <a href="#" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="e_dlg()">新建</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="e_dlg()">复制</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="e_dlg();">编辑</a>
            <a href="#" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="del();">删除</a>
            <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
            <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="ShowAdvanced();">Advanced</a>

        </div>
        <div id="mm" style="width: 120px">
            <div data-options="name:'SKU'">SKU</div>
            <div data-options="name:'OldSKU'">旧SKU</div>
            <div data-options="name:'ProductName'">商品名称</div>
        </div>
        <div id="c_dlg"></div>
        <div id="e_dlg"></div>

    </div>
</body>
