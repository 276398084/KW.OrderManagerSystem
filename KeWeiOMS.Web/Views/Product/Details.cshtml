@model KeWeiOMS.Domain.ProductType
<!DOCTYPE html>
<title>商品详情</title>
<link href="@Url.Content("~/Scripts/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/uploadify/jquery.uploadify-3.1.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('#dg_zu').datagrid({
            url: '@Url.Action("ZuList", "Product")/@Model.SKU',
            width: 300
        });
        $('#dg_pl').datagrid({
            url: '@Url.Action("PlList", "Product")/@Model.SKU',
            width: 300
        });
        $('#dg_record').datagrid({
            url: '@Url.Action("Record", "Product")/@ViewData["id"]',
            width: 1200,
            height: 300
        });
    });

    function Ispl(value) {
        if (value == "1") {
            return "是";
        }
        else
            return "否";
    }
</script>
<fieldset>
    <legend>商品详情</legend>
    @*    <div class="display-label">主键</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Id)
    </div>*@
    <table>
        <tr>
            <td>
                <div class="display-label">主编号:</div>
            </td>
            <td style="width: 200px">
                <div class="display-field">
                    @Html.DisplayFor(model => model.OldSKU)
                </div>
            </td>
            <td colspan="3"></td>
            <td colspan="3"></td>
        </tr>
        <tr>
            <td>
                <div class="display-label">商品编号:</div>
            </td>
            <td style="width: 200px">
                <div class="display-field">
                    @Html.DisplayFor(model => model.SKU)
                </div>
            </td>
            <td colspan="3">
                <div class="display-label">类别:</div>
            </td>
            <td colspan="3">
                <div class="display-field">
                    @Html.DisplayFor(model => model.Category)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="display-label">商品名称:</div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.ProductName)
                </div>
                <td colspan="3">
                    <div class="display-label">商品价格:</div>
                </td>
            <td colspan="3">
                <div class="display-field">
                    @Html.DisplayFor(model => model.Price)
                </div>
            </td>
        </tr>
    </table>
</fieldset>

<div id="tt" class="easyui-tabs" style="width: 1350px; height: 350px;">
    <div title="仓库信息" style="padding: 20px;">
        <fieldset>
            <legend>库存信息</legend>
            <table>
                <tr>
                    <td>
                        <div class="display-label">库存天数:</div>
                    </td>
                    <td style="width: 200px">
                        <div class="display-field">
                            @Html.DisplayFor(model => model.DayByStock)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">库位:</div>
                    </td>
                    <td style="width: 200px">
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Location)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="display-label">重量:</div>
                    </td>
                    <td style="width: 200px">
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Weight)
                        </div>
                    </td>
                    <td>长×宽×高:
                    </td>
                    <td>@Html.DisplayFor(model => model.Long) × @Html.DisplayFor(model => model.Wide) × @Html.DisplayFor(model => model.High)
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="display-label">品牌:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Brand)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">型号:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Model)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="display-label">包装系数:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.PackCoefficient)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">电子:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.IsElectronic)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">电池:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.HasBattery)
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <div class="display-label">采购人:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Purchaser)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">验货人:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Examiner)
                        </div>
                    </td>
                    <td>
                        <div class="display-label">包装人:</div>
                    </td>
                    <td>
                        <div class="display-field">
                            @Html.DisplayFor(model => model.Packer)
                        </div>
                    </td>
                </tr>

            </table>
        </fieldset>
    </div>
    <div title="是否侵权" style="overflow: auto; padding: 20px;">
        <table id="dg_pl" class="easyui-datagrid" rownumbers="true" singleselect="true" fit="true">
            <thead>
                <tr>
                    <th field="Platform" width="80">平台
                    </th>
                    <th field="Isinfraction" width="100" data-options="formatter:Ispl">是否侵权
                    </th>
                    <th field="Remark" width="400" data-options="editor:'text'">备注
                    </th>
            </thead>
        </table>
    </div>
    <div title="组合产品" style="overflow: auto; padding: 20px;">
        <table id="dg_zu" class="easyui-datagrid" rownumbers="true" singleselect="true" fit="true">
            <thead>
                <tr>
                    <th field="SrcSKU" width="80" data-options="editor:'text'">SKU
                                </th>
                    <th field="SrcQty" width="100" data-options="editor:'text'">Qty
                                </th>
            </thead>
        </table>
    </div>
    <div title="备注信息" style="overflow: auto; padding: 20px;">
        <table>
            <tr>
                <td>
                    <div class="display-label">简单描述:</div>
                </td>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.Summary)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="display-label">包装注意事项:</div>
                </td>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.PackMemo)
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div title="商品日志" style="padding: 20px;">
        <table id="dg_record" class="easyui-datagrid" rownumbers="true" singleselect="true">
            <thead>
                <tr>
                    <th field="RecordType" width="150">类型
                    </th>
                    <th field="Content" width="700">内容
                    </th>
                    <th field="CreateBy" width="60">处理人
                    </th>
                    <th field="CreateOn" width="200" formatter="getDate">处理时间
                    </th>
                </tr>
            </thead>
        </table>

    </div>

</div>

