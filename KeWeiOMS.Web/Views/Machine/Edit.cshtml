@model KeWeiOMS.Domain.MachineType

@{
    Layout = null;
}

<script type="text/javascript">

    $(function () {
        $("#e_Code").validatebox({
            required: true
        });
        $('#e_MachineClass').combobox({
            url: '@Url.Action("GetDataByCode", "Dictionary")/MachineClass',
            valueField: 'DicValue',
            textField: 'FullName',
            panelHeight: 200,
            width: 150
        });
        $('#e_Status').combobox({
            url: '@Url.Action("GetDataByCode", "Dictionary")/MachineStatus',
            valueField: 'DicValue',
            textField: 'FullName',
            panelHeight: 200,
            width: 150
        });
        $('#e_UserName').combobox({
            url: '@Url.Action("ListQ","User")',
                    panelHeight: 100,
                    mode: 'remote',
                    valueField: 'Realname',
                    textField: 'Realname',
                    editable: true
        });
        $('#e_BuyBy').combobox({
            url: '@Url.Action("ListQ","User")',
                    panelHeight: 100,
                    mode: 'remote',
                    valueField: 'Realname',
                    textField: 'Realname',
                    editable: true
                });
        $('#e_BuyDate').datebox();

        $('#e_StartDate').datebox();


        $('#e_EndDate').datebox();

    });

</script>

@using (Html.BeginForm("Edit", "Machine", FormMethod.Post, new { id = "e_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
		@*<td>
            @Html.LabelFor(model => model.Id,"主键:")
		</td>*@
