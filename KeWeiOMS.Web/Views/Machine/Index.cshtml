
@model IEnumerable<KeWeiOMS.Domain.MachineType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script src="@Url.Content("~/Scripts/easyUI/datagrid-detailview.js")"></script>
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","Machine")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100],
            view: detailview,
            detailFormatter: function (index, row) {
                return '<div id="ddv-' + index + '" style="padding:5px 0"></div>';
            },
            onExpandRow: function (index, row) {
                $('#ddv-' + index).panel({
                    border: false,
                    cache: false,
                    href: '@Url.Action("GetOld", "MachinesOld")' + "/" + row.Code,
                    onLoad: function () {
                        $('#dg').datagrid('fixDetailRowHeight', index);
                    }
                });
                       $('#dg').datagrid('fixDetailRowHeight', index);
            }
        });

    });


	//新建
        function c_dlg() {
            var url_str = '@Url.Action("Create","Machine")';
            showdlg(url_str, 'c_dlg', ajaxAdd)
        }

        //编辑框
        function e_dlg() {
            var url = '@Url.Action("Edit","Machine")/' + id;
            if (id != undefined) {
                var url = '@Url.Action("Edit", "Module")/' + id;
                showdlg(url, 'e_dlg', ajaxEdit)
            }
        }

        //异步新建提交
    function ajaxAdd() {
        $('#co_form').form('submit', {
            url: '@Url.Action("Create", "MachinesOld")',
                    onSubmit: function () {
                        return $(this).form('validate');
                    },
                    success: function (result) {
                        var result = eval('(' + result + ')');
                        if (result.errorMsg) {
                            $.messager.show({
                                title: '提示',
                                msg: '保存失败:' + result.errorMsg,
                                timeout: 0,
                                showType: 'slide'
                            });
                        } else {
                            $.messager.show({
                                title: '提示',
                                msg: '保存成功',
                                timeout: 2000,
                                showType: 'slide'
                            });
                        }
                    }
                });

            formPost('c_form', '@Url.Action("Create", "Machine")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "Machine")', 'e_dlg', 'dg');
        }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {

                var url = '@Url.Action("Delete", "Machine")/' + id;
                delData(url, 'dg');

            }
        }

    //获取选中行
    function getselectedRow() {
        var row = $('#dg').datagrid('getSelected');
        if (row != undefined) {
            if (row.hasOwnProperty('Id')) {
                var id = row['Id'];
                return id;
            }
        }
        $.messager.show({
            title: '提示',
            msg: '请选择行',
            timeout: 3000,
            showType: 'slide'
        });
        return (undefined);
    }
     function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
      }	

</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
@*            <th field="Id" width="100">
                主键
            </th>*@

            <th field="Code" width="100">
                编号
            </th>

            <th field="Name" width="100">
                名称
            </th>

            <th field="Status" width="100">
                状态
            </th>

            <th field="UserName" width="100">
                使用者
            </th>

            <th field="StartDate" width="100" formatter="getDate">
                开始使用时间
            </th>

            <th field="EndDate" width="100" formatter="getDate">
                结束始用时间
            </th>


    	</tr>
		</thead>
		</table>
        <div id="toolbar">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="c_dlg();">新建</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a>  
		  <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div> 
		<div id="mm" style="width: 120px">
            <div data-options="name:'Code'">编号</div>
            <div data-options="name:'Name'">名称</div>
            <div data-options="name:'UserName'">使用者</div>

        </div>
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>

</div>
</body>
