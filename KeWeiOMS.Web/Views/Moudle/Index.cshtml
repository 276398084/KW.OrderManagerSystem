@model IEnumerable< KeWeiOMS.Domain.ModulesType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","User")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100]
        });

    });

    //新建
    function c_dlg() {
        var url_str = '@Url.Action("Create","User")';
		
        $('#c_dlg').load(url_str, function () {
            $(this).dialog({
                title: '新建',
				modal:true,
				loadingMessage:'正在加载...',
                buttons: [{
                    text: '提交',
                    iconCls: 'icon-ok',
                    handler: function () {
                        $('#c_form').submit();
                    }
                }, {
                    text: '取消',
                    handler: function () {
                        $('#c_dlg').dialog('close');
                    }
                }]
            });
        }).show();
    }

    //编辑框
    function e_dlg() {
        var id = getselectedRow();
        if (id != undefined) {
            var url = '@Url.Action("Edit","User")/' + id;

   
            $('#e_dlg').load(url, function () {
                $(this).dialog({
                    title: '编辑',
					modal:true,
					loadingMessage:'正在加载...',
                    buttons: [{
                        text: '提交',
                        iconCls: 'icon-ok',
                        handler: function () {
							$('#e_form').submit();
                        }
                    }, {
                        text: '取消',
                        handler: function () {
                            $('#e_dlg').dialog('close');
                        }
                    }]
                });
            }).show();
        }
    }

//异步新建提交
    function ajaxAdd() {
        $('#c_form').ajaxSubmit({
            url: '@Url.Action("Create","User")',
            beforeSubmit: function () {
                if ($('#c_form').form('validate') != true) {
                    return false;
                }
                if ($("#c_form").valid() != true) {
                    return false;
                }
                return true;
            },
            success: function (data) {
                if (data == true) {
                    $('#c_dlg').dialog('close');
                    $('#dg').datagrid('reload');
                    $.messager.show({
                        title: '提示',
                        msg: '保存成功',
                        timeout: 2000,
                        showType: 'slide'
                    });
                } else {
                    $.messager.show({
                        title: '提示',
                        msg: '保存失败:' + data,
						 timeout: 0,
                        showType: 'slide'
                    });
                }
            }
        });

        return false;
    }
    //异步编辑提交
    function ajaxEdit() {
        $('#e_form').ajaxSubmit({
            url: '@Url.Action("Edit","User")',
            beforeSubmit: function () {
                if ($('#e_form').form('validate') != true) {
                    return false;
                }
                if ($("#e_form").valid() != true) {
                    return false;
                }
                return true;
            },
            success: function (data) {
                if (data == true) {
                    $('#e_dlg').dialog('close');
                    $('#dg').datagrid('reload');
                    $.messager.show({
                        title: '提示',
                        msg: '保存成功',
                        timeout: 2000,
                        showType: 'slide'
                    });
                } else {
                    $.messager.show({
                        title: '提示',
                        msg: '保存失败:' + data,
						 timeout: 0,
                        showType: 'slide'
                    });
                }
            }
        });

        return false;
    }

    //删除
    function del() {

        var id = getselectedRow();

        if (id != undefined) {
            $.messager.confirm('确认', '确定删除?', function (r) {
                if (r) {
                    var url = '@Url.Action("Delete","User")/' + id;
                    $.post(url, function () {

                    }).success(function (data) {
                        var msgstr = "删除成功";
                        if (data != true) {
                            msgstr = "删除失败" + data;
							$.messager.show({
	                            title: '提示',
	                            msg: msgstr,
								 timeout: 0,
	                            showType: 'slide'
                        	});
                        }else{
	                        $.messager.show({
	                            title: '提示',
	                            msg: msgstr,
	                            timeout: 3000,
	                            showType: 'slide'
	                        });
						}

                        $('#dg').datagrid('reload');
                    }) .error(function () {
                            $.messager.alert('错误', '删除发生错误');
                        });

                }
            });
        }
    }

    //获取选中行
    function getselectedRow() {
        var row = $('#dg').datagrid('getSelected');
        if (row != undefined) {
            if (row.hasOwnProperty('UserID')) {
                var id = row['UserID'];
                return id;
            }
        }
        $.messager.show({
            title: '提示',
            msg: '请选择行',
            timeout: 3000,
            showType: 'slide'
        });
        return (undefined);
    }
   
</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
		<th field="UserID" width="100" >
                编号
        </th>
		<th field="UserName" width="100" >
                名称
        </th>
		<th field="Password" width="100" >
                密码
        </th>
		<th field="Age" width="100" >
                年龄
        </th>
		<th field="Enable" width="100" >
                是否启用
        </th>
		<th field="Birth" width="100" >
                生日
        </th>
    	</tr>
		</thead>
		</table>
        <div id="toolbar">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="c_dlg();">新建</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a>  
        </div> 
        
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>

</div>
</body>
