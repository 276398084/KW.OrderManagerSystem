
@model IEnumerable<KeWeiOMS.Domain.ProjectType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
<script language="javascript" type="text/javascript">
    $(function () {
        $('#dg').datagrid({
            url: '@Url.Action("List","Project")',
            pageNumber: 1,
            pageSize: 20,
            pageList: [20, 40, 60, 80, 100]
        });

    });


	//新建
        function c_dlg() {
            var url_str = '@Url.Action("Create","Project")';
            showdlg(url_str, 'c_dlg', ajaxAdd)
        }

        //编辑框
    function e_dlg() {
        var id = getselectedRow();
            var url = '@Url.Action("Edit","Project")/' + id;
            if (id != undefined) {
                showdlg(url, 'e_dlg', ajaxEdit)
            }
        }

        //异步新建提交
        function ajaxAdd() {
            formPost('c_form', '@Url.Action("Create", "Project")', 'c_dlg', 'dg');
        }
        //异步修改提交
        function ajaxEdit() {
            formPost('e_form', '@Url.Action("Edit", "Project")', 'e_dlg', 'dg');
        }


    function d_dlg(id) {
        var url = '@Url.Action("Details","Project")/' + id;
        if (id != undefined) {
            showdlg(url, 'd_dlg', ajaxDetails)
        }

        if (id != undefined) {
            var url_str = '@Url.Action("Details","Project")/' + id;
                    $('#d_dlg').load(url_str, function () {
                        $(this).dialog({
                            title: '编辑',
                            modal: true,
                            loadingMessage: '正在加载...',
                            onClose: function () {
                                $.ajax({
                                    url: '/Project/DelSession'
                                })
                            },
                            buttons: [{
                                text: '提交',
                                iconCls: 'icon-ok',
                                handler: function () {
                                    ajaxDetails();
                                    $('#d_dlg').dialog('close');
                                    $('#dg').datagrid('reload');
                                }
                            }, {
                                text: '取消',
                                handler: function () {
                                    $('#e_dlg').dialog('close');
                                }
                            }]
                        });
                    }).dialog('open');;
                }

    }
    function ajaxDetails() {
        formPost('d_form', '@Url.Action("Details", "Project")', 'd_dlg', 'dg');
            }
        //删除
        function del() {
            var id = getselectedRow();
            if (id != undefined) {
                $.messager.confirm('确认', '确定删除?', function (r) {
                    if (r) {
                        var url = '@Url.Action("Delete", "Project")/' + id;
                            $.post(url, function () {
                            }).success(function (data) {
                                var msgstr = "删除成功";
                                if (data != true) {
                                    msgstr = "删除失败" + data;
                                    $.messager.show({
                                        title: '提示',
                                        msg: msgstr,
                                        timeout: 0,
                                        showType: 'slide'
                                    });
                                } else {
                                    $.messager.show({
                                        title: '提示',
                                        msg: msgstr,
                                        timeout: 3000,
                                        showType: 'slide'
                                    });
                                }

                                $('#dg').datagrid('reload');
                            }).error(function () {
                                $.messager.alert('错误', '删除发生错误');
                            });

                        }
                    });
                }
            }

    //获取选中行
    function getselectedRow() {
        var row = $('#dg').datagrid('getSelected');
        if (row != undefined) {
            if (row.hasOwnProperty('Id')) {
                var id = row['Id'];
                return id;
            }
        }
        $.messager.show({
            title: '提示',
            msg: '请选择行',
            timeout: 3000,
            showType: 'slide'
        });
        return (undefined);
    }
     function doSearch() {
                search = $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
                $("#dg").datagrid("load", {
                    search: search
                });
      }
    function create(v,r,i)
    {
        return "创建人：" +r.CreateBy  + "<br>创建时间：" +getOnlyDate(v) ;
    }

    function date(v, r, i) {
        return "开始时间：" + getOnlyDate(v) + "<br>预计时间：" + getOnlyDate(r.EndDate) + "<br>项目工期：" + r.NeedDay+ "<br>完成时间：" + getOnlyDate(r.RealEndDate);
    }
    function Manager(v)
    {
        return '<a href=\'javascript:void(0)\' class=\'easyui-linkbutton\' onclick=\'d_dlg(' + v + ')\'>添加进程</a>'
    }
    function contentfor(v) {
        return v;
    }
</script>
<div region="center">
<table id="dg" class="easyui-datagrid" 
           toolbar="#toolbar"  
           rownumbers="true" fitColumns="true" singleSelect="true" pagination="true" fit="true">  
        <thead>  
        <tr>
            <th field="Id"  width="50" formatter="Manager">
              操作
            </th>

            <th field="ProjectName" width="60" sortable="true">
                项目名称
            </th>

            <th field="Status" width="60" sortable="true">
                项目状态
             @*   （未开始，执行中，暂停中，已完成）*@
            </th>

            <th field="ProjectManager" width="60" sortable="true">
                项目负责人
            </th>

            <th field="Content" width="100" sortable="true" formatter="contentfor">
                项目进程
            </th>

            <th field="BeginDate" width="100" formatter="date" sortable="true">
                时间规划
            </th>

            <th field="CreateOn" width="100" formatter="create" sortable="true">
                项目创建
            </th>

            <th field="Evaluate" width="100" sortable="true">
                评价
            </th>


    	</tr>
		</thead>
		</table>
        <div id="toolbar">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="c_dlg();">新建</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="e_dlg()">编辑</a>  
        <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="del();">删除</a>  
		  <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
        </div> 
		<div id="mm" style="width: 120px">
            <div data-options="name:'ProjectName'">项目名称</div>
            <div data-options="name:'CreateBy'">创建人</div>
            <div data-options="name:'Evaluate'">评价</div>

        </div>
    <div id="c_dlg"></div>
    <div id="e_dlg"></div>
    <div id="d_dlg"></div>
</div>
</body>
