	</tr>

	<tr>
		<td>
            @Html.LabelFor(model => model.ProjectManager,"项目负责人:")
		</td>
		<td>
            @Html.TextBoxFor(model => model.ProjectManager,new{@id="e_ProjectManager"})
		</td>
	</tr>

	<tr>
		<td>
