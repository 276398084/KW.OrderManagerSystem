@model KeWeiOMS.Domain.ProjectType
@{
    Layout = null;
}
<script type="text/javascript">
    $(function () {
        //这里写加载下拉列表、修改编辑控件的初始化值
        $('#e_ProjectManager').combobox({
            url: '@Url.Action("ListQ","User")',
           panelHeight: 100,
           mode: 'remote',
           valueField: 'Realname',
           textField: 'Realname',
           editable: true,
           required: true
       });

        $('#e_ProjectName').validatebox({ required: true });

		
        $('#e_BeginDate').datebox({required:true});

        $('#e_EndDate').datebox({ required: true });

        $('#e_NeedDay').validatebox({required:true});

        $('#e_RealEndDate').datebox();

        $('#e_Status').combobox({
            required: true,
            valueField: 'id',
            textField: 'text',
            panelHeight: 'auto',
            editable: false,
            data: [{ id: "未开始", text: "未开始" }, { id: "执行中", text: "执行中" }, { id: "暂停中", text: "暂停中" }, { id: "已完成", text: "已完成" }]
        });
    });
</script>
@using (Html.BeginForm("Edit", "Project", FormMethod.Post, new { id = "e_form" }))
{
<fieldset>
<table class="editForm">
	<tr>
@*		<td>
            @Html.LabelFor(model => model.Id,"主键:")
		</td>*@
