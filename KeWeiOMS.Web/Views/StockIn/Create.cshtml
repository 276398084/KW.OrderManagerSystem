@model KeWeiOMS.Domain.StockInType
@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        $('#c_WId').combogrid({
            required: true,
            editable: false,
            panelWidth: 410,
            idField: 'Id',
            textField: 'WName',
            url: '/Warehouse/QList',
            fit: true,
            columns: [[
                { field: 'Id', title: 'Id', width: 100 },
                { field: 'WCode', title: '仓库代码', width: 100 },
                { field: 'WName', title: '仓库名称', width: 100 },
                { field: 'Address', title: '仓位地址', width: 100 }
            ]]
        });
        $('#c_WId').combogrid("setValue", 1);

        $('#c_SKU').combogrid({
            required: true,
            panelWidth: 410,
            mode: 'remote',
            idField: 'SKU',
            textField: 'SKU',
            required: true,
            url: '/Product/ListQ',
            fit: true,
            columns: [[
                { field: 'SKU', title: 'SKU', width: 100 },
                { field: 'ProductName', title: 'Title', width: 200 },
                { field: 'Standard', title: '规格', width: 100 }
            ]]
        })

        $('#c_InType').combobox({
            url: '@Url.Action("GetIntType", "Dictionary")',
            valueField: 'FullName',
            textField: 'FullName',
            panelHeight: 'auto',
            editable: true,
            required: true
        });
        $('#c_InType').combobox("setValue", "采购到货");
        $('#c_Price').numberbox({
            precision: 2,
            required: true,
            onChange: function () {
                nozero();
            }
        });
        $('#c_Qty').numberbox({
            required: true,
            onChange: function () {
                Qtynozero();
            }
        });

    });
    function nozero() {
        var num = $('#c_Price').attr("value");
        if (num != "" & num <= 0) {
            alert("金额输入有误");
            $('#c_Price').numberbox("setValue", "");
        }
    }
    function Qtynozero() {
        var num = $('#c_Qty').attr("value");
        if (num != "" & num <= 0) {
            alert("数量输入有误");
            $('#c_Qty').numberbox("setValue", "");
        }
    }


</script>

