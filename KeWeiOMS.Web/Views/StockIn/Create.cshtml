@model KeWeiOMS.Domain.StockInType

@{
    Layout = null;
}

<script type="text/javascript">

    $(function () {

		  $('#c_CreateBy').combobox({
		      url: '@Url.Action("ListQ","User")',
		      panelHeight: 100,
		      mode: 'remote',
		      valueField: 'Realname',
		      textField: 'Realname',
		      editable: true
		  });
        $('#c_CreateBy').combobox("setValue", "张娟娟");


        $('#c_CreateOn').datebox();
        $('#c_CreateOn').datebox("setValue", getStartDate(0));
        $('#c_WId').combogrid({
            required: true,
            panelWidth: 410,
            mode: 'remote',
            idField: 'Id',
            textField: 'Id',
            required: true,
            url: '/Warehouse/QList',
            fit: true,
            columns: [[
                { field: 'Id', title: 'Id', width: 100 },
                { field: 'WCode', title: '仓库代码', width: 100 },
                { field: 'WName', title: '仓库名称', width: 100 },
                { field: 'Address', title: '仓位地址', width: 100 }

            ]]

        })
        $('#c_WId').combogrid("setValue", 1);
        $('#c_SKU').combogrid({
            required: true,
            panelWidth: 410,
            mode: 'remote',
            idField: 'SKU',
            textField: 'SKU',
            required: true,
            url: '/Product/ListQ',
            fit: true,
            columns: [[
                { field: 'SKU', title: 'SKU', width: 100 },
                { field: 'ProductName', title: 'Title', width: 200 },
                { field: 'Standard', title: '规格', width: 100 }

            ]]

        })

    });
    
</script>

