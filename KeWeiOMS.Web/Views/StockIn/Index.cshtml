@model IEnumerable<KeWeiOMS.Domain.StockInType>
@{
    ViewBag.Title = "Index";
}
<body class="easyui-layout">
    <script language="javascript" type="text/javascript">
        $(function () {
            $('#dg').datagrid({
                url: '@Url.Action("List", "StockIn")',
                pageNumber: 1,
                pageSize: 20,
                pageList: [20, 40, 60, 80, 100]
            });
            $('#StartDate').datebox();
            $('#EndDate').datebox();
            $('#txtStartDate').datebox("setValue", getStartDate(30));
            $('#txtEndDate').datebox("setValue", getStartDate(-1));
        });

        //新建
        function c_dlg() {
            var url_str = '@Url.Action("Create", "StockIn")';

            $('#c_dlg').load(url_str, function () {
                $(this).dialog({
                    title: '新建',
                    modal: true,
                    loadingMessage: '正在加载...',
                    buttons: [{
                        text: '提交',
                        iconCls: 'icon-ok',
                        handler: function () {
                            ajaxAdd();
                        }
                    }, {
                        text: '取消',
                        handler: function () {
                            $('#c_dlg').dialog('close');
                        }
                    }]
                });
            }).dialog('open');;
        }

        //编辑框
        function e_dlg() {
            var id = getselectedRow();
            if (id != undefined) {
                var url = '@Url.Action("Edit", "StockIn")/' + id;
                $('#e_dlg').load(url, function () {
                    $(this).dialog({
                        title: '编辑',
                        modal: true,
                        loadingMessage: '正在加载...',
                        buttons: [{
                            text: '提交',
                            iconCls: 'icon-ok',
                            handler: function () {
                                ajaxEdit();
                            }
                        }, {
                            text: '取消',
                            handler: function () {
                                $('#e_dlg').dialog('close');
                            }
                        }]
                    });
                }).dialog('open');
            }
        }

        //异步新建提交
        function ajaxAdd() {
            $('#c_WName').attr("value", $('#c_WId').combogrid("getText"));
            $('#c_form').form('submit', {
                url: '@Url.Action("Create", "StockIn")',
                onSubmit: function () {
                    return $(this).form('validate');
                },
                success: function (result) {

                    if (!result.IsSuccess) {
                        $.messager.show({
                            title: '提示',
                            msg: '保存失败:' + result.ErrorMsg,
                            timeout: 0,
                            showType: 'slide'
                        });
                    } else {
                        $('#c_dlg').dialog('close');
                        $('#dg').datagrid('reload');
                        $.messager.show({
                            title: '提示',
                            msg: '保存成功',
                            timeout: 2000,
                            showType: 'slide'
                        });
                    }
                }
            });
            }
            //异步修改提交
            function ajaxEdit() {
                $('#e_WName').attr("value", $('#e_WId').combogrid("getText"));
                $('#e_form').form('submit', {
                    url: '@Url.Action("Edit", "StockIn")',
                    onSubmit: function () {
                        return $(this).form('validate');
                    },
                    success: function (result) {

                        if (!result.IsSuccess) {
                            $.messager.show({
                                title: '提示',
                                msg: '保存失败:' + result.ErrorMsg,
                                timeout: 0,
                                showType: 'slide'
                            });
                        } else {
                            $('#e_dlg').dialog('close');
                            $('#dg').datagrid('reload');
                            $.messager.show({
                                title: '提示',
                                msg: '保存成功',
                                timeout: 2000,
                                showType: 'slide'
                            });
                        }
                    }
                });
            }


            //删除
            function del() {
                var id = getselectedRow();
                if (id != undefined) {
                    $.messager.confirm('确认', '确定删除?', function (r) {
                        if (r) {
                            var url = '@Url.Action("Delete", "StockIn")/' + id;
                            $.post(url, function () {
                            }).success(function (data) {
                                var msgstr = "删除成功";
                                if (!data.IsSuccess) {
                                    msgstr = "删除失败" + data;
                                    $.messager.show({
                                        title: '提示',
                                        msg: msgstr,
                                        timeout: 0,
                                        showType: 'slide'
                                    });
                                } else {
                                    $.messager.show({
                                        title: '提示',
                                        msg: msgstr,
                                        timeout: 3000,
                                        showType: 'slide'
                                    });
                                }

                                $('#dg').datagrid('reload');
                            }).error(function () {
                                $.messager.alert('错误', '删除发生错误');
                            });

                        }
                    });
                }
            }

            //获取选中行
            function getselectedRow() {
                var row = $('#dg').datagrid('getSelected');
                if (row != undefined) {
                    if (row.hasOwnProperty('Id')) {
                        var id = row['Id'];
                        return id;
                    }
                }
                $.messager.show({
                    title: '提示',
                    msg: '请选择行',
                    timeout: 3000,
                    showType: 'slide'
                });
                return (undefined);
            }
            function toExcel() {
                $('#dg').datagrid('loading');
                var postUrl = "/Order/ExportDown/1";
                $.ajax({
                    url: '@Url.Action("ToExcel", "StockIn")/',
            success: function (result) {

                $.messager.show({
                    title: '提示',
                    msg: result.Msg,
                    timeout: 0,
                    showType: 'slide',
                })
                location.href = postUrl;
                $('#dg').datagrid('reload');
            }
        })
    }

    function doSearch() {
        search = "CreateOn_st&" + $('#txtStartDate').datebox("getValue") + "^CreateOn_et&" + $('#txtEndDate').datebox("getValue") + "^" + $('#txtSearch').searchbox("getName") + "&" + $('#txtSearch').searchbox("getValue") + "^";
        $("#dg").datagrid("load", {
            search: search
        });
    }
            function showPrint(v, r) {
                if (r.IsAudit == 1)
                    return '<a href="javascript:void(0)" onclick="printSKU(' + v + ')">打印SKU</a>';
                else {
                    return '<a href="javascript:void(0)" onclick="AuditIn(' + v + ')">审核</a>';
                }
            }

            function printSKU(id) {
                jQuery.ajax({
                    url: "/StockIn/PrintSKU/" + id,
                    type: "post",
                    success: function (sss) {
                        window.open('/Home/PrintDetail/33');
                    }
                });
            }

            function AuditIn(id) {
                $.messager.confirm("提示", "确定要审核吗？", function (r) {
                    if (r) {
                        jQuery.ajax({
                            url: "/StockIn/DoAudit/" + id,
                            type: "post",
                            success: function (msg) {
                                if (msg.IsSuccess) {
                                    alert("审核成功!");
                                } else {
                                    alert(msg.ErrorMsg);
                                }
                                $('#dg').datagrid("reload");
                            }
                        });
                    }
                });
            }
    </script>
    <div region="center">
        <table id="dg" class="easyui-datagrid"
            toolbar="#toolbar"
            rownumbers="true" fitcolumns="true" singleselect="true" pagination="true" fit="true">
            <thead>
                <tr>
                    <th field="Id" width="100" formatter="showPrint">操作
                    </th>
                    <th field="WName" width="100" sortable="true">入库仓库
                    </th>
                    <th field="InType" width="100" sortable="true">入库类型
                    </th>
                    <th field="SKU" width="100" sortable="true">商品
                    </th>

                    <th field="Qty" width="100" sortable="true">数量
                    </th>

                    <th field="Price" width="100" sortable="true">金额
                    </th>

                    <th field="SourceQty" width="100" sortable="true">原有库存
                    </th>

                    <th field="CreateBy" width="100" sortable="true">入库人
                    </th>

                    <th field="CreateOn" width="100" formatter="getDate" sortable="true">入库时间
                    </th>
                    <th field="Memo" width="100" sortable="true">备忘
                    </th>

                </tr>
            </thead>
        </table>
        <div id="toolbar">
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="c_dlg();">入库</a>

                开始时间：<input type="text" id="txtStartDate" class="easyui-datebox" style="width:100px" readonly="readonly"  />&nbsp;
                结束时间：<input type="text" id="txtEndDate" class="easyui-datebox" readonly="readonly" style="width:100px"/>&nbsp;&nbsp;
        <input id="txtSearch" class="easyui-searchbox" data-options="prompt:'查询关键字',searcher:doSearch,menu:'#mm'"></input>
                  <a href="#" class="easyui-linkbutton" iconcls="icon-print" plain="true" onclick="toExcel();">导出数据</a>
        </div>
        <div id="mm" style="width: 120px">
            <div data-options="name:'WName'">入库仓库</div>
            <div data-options="name:'SKU'">商品</div>
            <div data-options="name:'CreateBy'">入库人</div>
        </div>
        <div id="c_dlg"></div>
        <div id="e_dlg"></div>

    </div>
</body>
