<script type="text/javascript" charset="utf-8">
    var panels = [];
    $(function () {
        panels = [{
            id: 'p1',
            title: '公告',
            height: 400,
            collapsible: true,
            href: '/Statistics/OrderCount/'
        }, {
            id: 'p2',
            title: '今日签到',
            height: 300,
            collapsible: true,
            href: '/Attend/IndexShow/'
        }, {
            id: 'p3',
            title: '部门公告',
            height: 200,
            collapsible: true,
            content: '<h1>预留</h1>'
        }, {
            id: 'p4',
            title: '论坛信息',
            height: 330,
            collapsible: true,
            href: '/Placard/IndexShow/'
          
        }, {
            id: 'p5',
            title: '常用网址',
            height: 200,
            collapsible: true,
            content: '<h1>为促进公司发展，加强员工内部交流，争取早日实现四个现代化，把和谐社会建设落到实处.请大家使用企业内部IM“腾讯通”<a href="http://115.238.181.253:8012/">下载</a><br/>安装完后,设置服务器网址 为:115.238.181.253</h1>'
        }, {
            id: 'p6',
            title: '公司公告',
            height: 200,
            collapsible: true,
            content: '<h1>本系统不支持IE和360(打印除外),请大家使用火狐浏览器.</h1>'
        }];

        $('#layout_portal_portal').portal({
            border: false,
            fit: true
        });


        state = 'p1,p2,p3:p4,p5,p6';/*冒号代表列，逗号代表行*/

        addPortalPanels(state);
        $('#layout_portal_portal').portal('resize');

    });

    function getPanelOptions(id) {
        for (var i = 0; i < panels.length; i++) {
            if (panels[i].id == id) {
                return panels[i];
            }
        }
        return undefined;
    }
    function addPortalPanels(portalState) {
        var columns = portalState.split(':');
        for (var i = 0; i < columns.length; i++) {
            var cc = columns[i].split(',');
            for (var j = 0; j < cc.length; j++) {
                var options = getPanelOptions(cc[j]);
                if (options) {
                    var p = $('<div/>').attr('id', options.id).appendTo('body');
                    p.panel(options);
                    $('#layout_portal_portal').portal('add', {
                        panel: p,
                        columnIndex: i
                    });
                }
            }
        }
    }
</script>
